<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCathedra"
        x:Class="MyCathedra.MainWindow"
        mc:Ignorable="d"
        Title="{Binding ElementName=mainFrame, Path=Content.Title, StringFormat='Дипломная работа: {0}'}" Height="700" Width="1024" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Background="#FFEDEEF0">

    <DockPanel Name="navigationPanel">
        <Frame Name="mainFrame" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Style="{DynamicResource {x:Type Frame}}"/>
    </DockPanel>
</Window>
